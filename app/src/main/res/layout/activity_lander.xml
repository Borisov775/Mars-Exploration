<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanderActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLd"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/LanderImage"
        android:layout_width="163dp"
        android:layout_height="116dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/mars_rover" />

    <TextView
        android:id="@+id/justText"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="LANDERS"
        android:textColor="#D5481C"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewLd"
        app:layout_constraintEnd_toStartOf="@+id/LanderImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ld_mtcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="20:17:49"
        android:textColor="#D5481C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/LanderImage"
        app:layout_constraintStart_toEndOf="@+id/ld_utc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ld_mtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mars Coordinated Time:"
        android:textColor="#D5481C"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ld_mtcText" />

    <TextView
        android:id="@+id/ld_utc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Coordinated Universal Time:"
        android:textColor="#D5481C"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ld_mtc" />

    <TextView
        android:id="@+id/ld_utcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="19:45:49"
        android:textColor="#D5481C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/LanderImage"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/ld_mtcText"
        app:layout_constraintTop_toTopOf="@+id/ld_utc" />

    <View
        android:id="@+id/divider4"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        android:foregroundTint="#FF5722"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewLd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LanderImage"
        tools:ignore="DuplicateIds,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>